{
  "manifest_version": 3,
  "name": "ChatGPT to PDF Exporter",
  "version": "1.1",
  "description": "Esporta le conversazioni di ChatGPT in formato PDF con Markdown e syntax highlighting",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://chat.openai.com/*",
    "https://chatgpt.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Esporta ChatGPT in PDF"
  }
}